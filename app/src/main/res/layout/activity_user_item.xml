<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <TextView
        android:id="@+id/tvTokenUser"
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:layout_weight="1"
        android:text="Token"
        app:layout_constraintEnd_toStartOf="@+id/tvTokenExpire"
        app:layout_constraintStart_toEndOf="@+id/txNameOfUser"
        app:layout_constraintTop_toTopOf="@+id/txNameOfUser" />

    <TextView
        android:id="@+id/tvTokenExpire"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="1"
        android:text="TokenExpire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTokenUser"
        app:layout_constraintTop_toTopOf="@+id/tvTokenUser" />

    <TextView
        android:id="@+id/txNameOfUser"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/tvTokenUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>